lesscss-percentage(n)
  (n * 100)%
sortable-dragged-z-index = 1050
sortable-placeholder-opacity = 0
sortable-over-opacity = 0.3
/* ========================================================================
   Component: Sortable
 ========================================================================== */
.uk-sortable
  position relative
  @extend .hook-sortable
/*
 * Makes text unselectable
 */
.uk-sortable > *
  -moz-user-select none
  -webkit-user-select none
  -ms-user-select none
  user-select none
/*
 * Prevents images and links from being dragged (default browser behavior)
 * Currently only works in Webkit
 */
.uk-sortable > * *
  -webkit-user-drag none
  user-drag none
/* Sub-modifier `uk-sortable-dragged`
 ========================================================================== */
.uk-sortable-dragged
  position absolute
  z-index sortable-dragged-z-index
  pointer-events none
  @extend .hook-sortable-dragged
/* Sub-modifier `uk-sortable-placeholder`
 ========================================================================== */
.uk-sortable-placeholder
  opacity sortable-placeholder-opacity
  @extend .hook-sortable-placeholder
/* Sub-modifier `uk-sortable-over`
 * Only if `warp:true`
 ========================================================================== */
.uk-sortable-over
  opacity sortable-over-opacity
  @extend .hook-sortable-over
/* Sub-object `uk-nestable-moving`
 ========================================================================== */
.uk-sortable-moving, .uk-sortable-moving *
  cursor move
@extend .hook-sortable-misc
hook-sortable()
.hook-sortable
  hook-sortable()
hook-sortable-dragged()
.hook-sortable-dragged
  hook-sortable-dragged()
hook-sortable-placeholder()
.hook-sortable-placeholder
  hook-sortable-placeholder()
hook-sortable-over()
.hook-sortable-over
  hook-sortable-over()
hook-sortable-misc()
.hook-sortable-misc
  hook-sortable-misc()
