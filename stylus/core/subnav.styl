lesscss-percentage(n)
  (n * 100)%
subnav-font-size = 1rem
subnav-margin = 10px
subnav-color = rgb(0, 119, 221, 1)
subnav-hover-color = rgb(0, 85, 153, 1)
subnav-disabled-color = rgb(153, 153, 153, 1)
subnav-line-border-height = 10px
subnav-line-border = rgb(221, 221, 221, 1)
subnav-line-border-width = 1px
subnav-pill-padding-vertical = 3px
subnav-pill-padding-horizontal = 9px
subnav-pill-hover-background = rgb(238, 238, 238, 1)
subnav-pill-hover-color = rgb(68, 68, 68, 1)
subnav-pill-active-background = rgb(0, 168, 230, 1)
subnav-pill-active-color = rgb(255, 255, 255, 1)
/* ========================================================================
   Component: Subnav
 ========================================================================== */
/*
 * 1. Remove default list style
 * 2. Remove whitespace between child elements when using `inline-block`
 */
.uk-subnav
  /* 1 */
  padding 0
  list-style none
  /* 2 */
  font-size 0.001px
/* Items
 ========================================================================== */
/*
 * 1. Create position context for dropdowns
 * 2. Reset whitespace hack
 */
.uk-subnav > li
  /* 1 */
  position relative
  /* 2 */
  font-size subnav-font-size
  vertical-align top
.uk-subnav > li, .uk-subnav > li > a, .uk-subnav > li > span
  display inline-block
.uk-subnav > li:nth-child(n + 2)
  margin-left subnav-margin
/*
 * Items
 */
.uk-subnav > li > a, .uk-subnav > li > span
  @extend .hook-subnav-item
.uk-subnav > li > a
  color subnav-color
  @extend .hook-subnav-link
.uk-subnav > li > a:hover
  color subnav-hover-color
  @extend .hook-subnav-link-hover
/*
 * Active
 */
.uk-subnav > li.uk-active > a
  @extend .hook-subnav-active
/*
 * Disabled
 */
.uk-subnav > li > span
  color subnav-disabled-color
  @extend .hook-subnav-disabled
/* Modifier: 'subnav-line'
 ========================================================================== */
.uk-subnav-line > li:nth-child(n + 2):before
  content ""
  display inline-block
  height subnav-line-border-height
  margin-right subnav-margin
  border-left subnav-line-border-width solid subnav-line-border
  @extend .hook-subnav-line-divider
/* Modifier: 'subnav-pill'
 ========================================================================== */
.uk-subnav-pill > li > a, .uk-subnav-pill > li > span
  padding subnav-pill-padding-vertical subnav-pill-padding-horizontal
  text-decoration none
  @extend .hook-subnav-pill
/*
 * Hover
 * 1. Apply hover style also to focus state
 * 2. Remove default focus style
 */
.uk-subnav-pill > li > a:hover, .uk-subnav-pill > li > a:focus
  background subnav-pill-hover-background
  color subnav-pill-hover-color
  /* 2 */
  outline none
  @extend .hook-subnav-pill-hover
/*
 * Active
 * `li` needed for higher specificity to override hover
 */
.uk-subnav-pill > li.uk-active > a
  background subnav-pill-active-background
  color subnav-pill-active-color
  @extend .hook-subnav-pill-active
@extend .hook-subnav-misc
