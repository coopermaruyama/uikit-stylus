lesscss-percentage(n)
  (n * 100)%
alert-margin-vertical = 15px
alert-padding = 10px
alert-background = rgb(235, 247, 253, 1)
alert-color = rgb(45, 112, 145, 1)
alert-success-background = rgb(242, 250, 227, 1)
alert-success-color = rgb(101, 159, 19, 1)
alert-warning-background = rgb(255, 252, 235, 1)
alert-warning-color = rgb(226, 131, 39, 1)
alert-danger-background = rgb(255, 241, 240, 1)
alert-danger-color = rgb(216, 80, 48, 1)
alert-large-padding = 20px
/* ========================================================================
   Component: Alert
 ========================================================================== */
.uk-alert
  margin-bottom alert-margin-vertical
  padding alert-padding
  background alert-background
  color alert-color
  @extend .hook-alert
/*
 * Add margin if adjacent element
 */
* + .uk-alert
  margin-top alert-margin-vertical
/*
 * Remove margin from the last-child
 */
.uk-alert > :last-child
  margin-bottom 0
/*
 * Keep color for headings if the default heading color is changed
 */
.uk-alert h1, .uk-alert h2, .uk-alert h3, .uk-alert h4, .uk-alert h5, .uk-alert h6
  color inherit
/* Close in alert
 ========================================================================== */
.uk-alert > .uk-close:first-child
  float right
/*
 * Remove margin from adjacent element
 */
.uk-alert > .uk-close:first-child + *
  margin-top 0
/* Modifier: `uk-alert-success`
 ========================================================================== */
.uk-alert-success
  background alert-success-background
  color alert-success-color
  @extend .hook-alert-success
/* Modifier: `uk-alert-warning`
 ========================================================================== */
.uk-alert-warning
  background alert-warning-background
  color alert-warning-color
  @extend .hook-alert-warning
/* Modifier: `uk-alert-danger`
 ========================================================================== */
.uk-alert-danger
  background alert-danger-background
  color alert-danger-color
  @extend .hook-alert-danger
/* Modifier: `uk-alert-large`
 ========================================================================== */
.uk-alert-large
  padding alert-large-padding
.uk-alert-large > .uk-close:first-child
  margin -10px -10px 0 0
@extend .hook-alert-misc
hook-alert()
.hook-alert
  hook-alert()
hook-alert-success()
.hook-alert-success
  hook-alert-success()
hook-alert-warning()
.hook-alert-warning
  hook-alert-warning()
hook-alert-danger()
.hook-alert-danger
  hook-alert-danger()
hook-alert-misc()
.hook-alert-misc
  hook-alert-misc()
