lesscss-percentage(n)
  (n * 100)%
thumbnail-padding = 4px
thumbnail-border = rgb(221, 221, 221, 1)
thumbnail-border-width = 1px
thumbnail-background = rgb(255, 255, 255, 1)
thumbnail-hover-border = rgb(170, 170, 170, 1)
thumbnail-hover-background = rgb(255, 255, 255, 1)
thumbnail-caption-padding = thumbnail-padding
thumbnail-caption-color = rgb(68, 68, 68, 1)
thumbnail-mini-width = 150px
thumbnail-small-width = 200px
thumbnail-medium-width = 300px
thumbnail-large-width = 400px
/* ========================================================================
   Component: Thumbnail
 ========================================================================== */
/*
 * 1. Container width fits its content
 * 2. Responsive behavior
 * 3. Corrects `max-width` behavior sed
 * 4. Required for `figure` element
 * 5. Style
 */
.uk-thumbnail
  /* 1 */
  display inline-block
  /* 2 */
  max-width 100%
  /* 3 */
  -moz-box-sizing border-box
  box-sizing border-box
  /* 3 */
  margin 0
  /* 4 */
  padding thumbnail-padding
  border thumbnail-border-width solid thumbnail-border
  background thumbnail-background
  @extend .hook-thumbnail
/*
 * Hover state for `a` elements
 * 1. Apply hover style also to focus state
 * 2. Needed for caption
 * 3. Remove default focus style
 */
a.uk-thumbnail:hover, a.uk-thumbnail:focus
  border-color thumbnail-hover-border
  background-color thumbnail-hover-background
  /* 2 */
  text-decoration none
  /* 3 */
  outline none
  @extend .hook-thumbnail-hover
/* Caption
 ========================================================================== */
.uk-thumbnail-caption
  padding-top thumbnail-caption-padding
  text-align center
  color thumbnail-caption-color
  @extend .hook-thumbnail-caption
/* Sizes
 ========================================================================== */
.uk-thumbnail-mini
  width thumbnail-mini-width
.uk-thumbnail-small
  width thumbnail-small-width
.uk-thumbnail-medium
  width thumbnail-medium-width
.uk-thumbnail-large
  width thumbnail-large-width
.uk-thumbnail-expand, .uk-thumbnail-expand > img
  width 100%
@extend .hook-thumbnail-misc
hook-thumbnail()
.hook-thumbnail
  hook-thumbnail()
hook-thumbnail-hover()
.hook-thumbnail-hover
  hook-thumbnail-hover()
hook-thumbnail-caption()
.hook-thumbnail-caption
  hook-thumbnail-caption()
hook-thumbnail-misc()
.hook-thumbnail-misc
  hook-thumbnail-misc()
